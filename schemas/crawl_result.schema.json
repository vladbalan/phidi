{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://example.com/schemas/crawl_result.schema.json",
	"title": "CrawlResult",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"domain",
		"url",
		"phones",
		"facebook_url",
		"linkedin_url",
		"twitter_url",
		"instagram_url",
		"address",
		"crawled_at",
		"http_status",
		"response_time_ms",
		"page_size_bytes",
		"method",
		"error"
	],
	"properties": {
		"domain": { "type": "string", "minLength": 1 },
		"url": { "type": "string", "format": "uri" },
		"phones": {
			"type": "array",
			"items": { "type": "string", "minLength": 1 }
		},
		"company_name": { "type": ["string", "null"], "minLength": 1 },
		"facebook_url": { "type": ["string", "null"], "format": "uri" },
		"linkedin_url": { "type": ["string", "null"], "format": "uri" },
		"twitter_url": { "type": ["string", "null"], "format": "uri" },
		"instagram_url": { "type": ["string", "null"], "format": "uri" },
		"address": { "type": ["string", "null"] },
		"crawled_at": { "type": "string", "format": "date-time" },
		"http_status": { "type": "integer" },
		"response_time_ms": { "type": "integer", "minimum": 0 },
		"page_size_bytes": { "type": "integer", "minimum": 0 },
		"method": { "type": "string", "enum": ["http"] },
		"error": { "type": ["string", "null"] },
		"_redirect_chain": {
			"type": ["array", "null"],
			"items": { "type": "string", "format": "uri" }
		},
		"_note": { "type": ["string", "null"] }
	}
}
