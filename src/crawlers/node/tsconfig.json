{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
